<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/alc_about"
        android:layout_width="133dp"
        android:layout_height="38dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="84dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="loadActivityB"
        android:text="@string/about_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alc_welcome" />

    <TextView
        android:id="@+id/alc_welcome"
        android:layout_width="304dp"
        android:layout_height="41dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="64dp"
        android:text="@string/alc_welcome"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/alc_profile"
        android:layout_width="140dp"
        android:layout_height="45dp"
        android:layout_marginTop="36dp"
        android:background="@android:color/holo_orange_dark"
        android:onClick="loadActivityC"
        android:text="@string/profile_button"
        app:layout_constraintEnd_toEndOf="@+id/alc_about"
        app:layout_constraintStart_toStartOf="@+id/alc_about"
        app:layout_constraintTop_toBottomOf="@+id/alc_about" />
</android.support.constraint.ConstraintLayout>